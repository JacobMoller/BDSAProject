@page "/createproject/{created}"
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager
@inject HttpClient Http
@using ProjectBank.Infrastructure
@using System


<PageTitle>Create Project</PageTitle>


@if(created == "show"){
        <div class="alert alert-success alert-dismissible fade @created" role="alert" id="SuccessAlert">
            <strong>Holy guacamole!</strong> You should check in on some of those fields below.
            <div class="nav-item p-3">
                        <NavLink class="nav-link" href="MyProjects">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Go To My Projects
                        </NavLink>
                    </div>
                    <div class="nav-item p-3">
                        <NavLink class="nav-link" href="/">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Go to HomePage
                        </NavLink>
                 </div>
        </div>
} else {
    <h1>Create a new project</h1>
    <FormComponent Project="@Project" ButtonName="Create"/>
}
    

@code {

    [Parameter]
    public string created{ get; set; }

    protected override void OnParametersSet()
    {
    //the param will be set now
        created  = created;
    }
    private CreateProjectDTO Project = new();
}