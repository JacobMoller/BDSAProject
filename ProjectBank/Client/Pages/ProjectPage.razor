@page "/project/{Id:int}"

<PageTitle>Project</PageTitle>

<div class="conatiner">
    <div class="row">
        <div class="col-8"> 
            <h1>@Project.Title</h1>
            <h3>By @Project.UserId</h3>
            <h4>Tags
                @foreach (var tag in Project.Tags)
                {
                    <span class="badge bg-secondary me-2">@tag.Name</span>
                }
            </h4>
            <p>@Project.Description</p>
        </div>
        <div class="col"> 
            <button class="btn btn-primary px-4 mt-2" type="submit" onclick="@Apply">Apply</button>
        </div>
    </div>
</div>

